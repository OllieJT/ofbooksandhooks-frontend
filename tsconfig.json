{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		/* type-checking */
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noEmit": true,

		/* clean-code */
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$ui": ["src/ui"],
			"$ui/*": ["src/ui/*"]
		}
	},
	"exclude": [
		"node_modules/",
		".svelte-kit/",
		"svelte.config.js",
		"prettier.cjs",
		"**/-todo/"
	],
	"include": ["**/*.d.ts", "**/*.js", "**/*.ts", "**/*.svelte"]
}
